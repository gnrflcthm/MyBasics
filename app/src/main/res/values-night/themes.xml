<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyBasics" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black_coral</item>
        <item name="colorPrimaryVariant">@color/obscura</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimarySurface">@color/black_coral_light</item>
        <item name="colorOnPrimarySurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_coral_light</item>
        <item name="colorSecondaryVariant">@color/black_coral_light</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="cardBackgroundColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>