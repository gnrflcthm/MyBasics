<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="16dp"
    android:layout_gravity="center"
    app:cardBackgroundColor="?attr/colorPrimaryVariant"
    android:background="#00000000"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="18dp"
        android:paddingVertical="8dp">
        <TextView
            android:id="@+id/dialogHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Add Reminder"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingHorizontal="50dp"
            android:paddingTop="0dp"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/setTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/dialogHeader"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:hint="Title"
            />

        <LinearLayout
            android:id="@+id/schedContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setTitle"
            app:layout_constraintBottom_toTopOf="@id/btnSave"
            android:layout_marginTop="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set When"
                />
            <TextView
                android:id="@+id/textSetDateTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/10/10 10:00 PM"
                android:textAlignment="center"
                android:textSize="16dp"
                android:paddingVertical="8dp"
                android:background="?attr/colorSecondaryVariant"
                android:foreground="?android:attr/selectableItemBackground"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="Save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/schedContainer" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
