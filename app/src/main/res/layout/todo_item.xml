<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="5dp"
    android:paddingVertical="10dp"
    android:layout_marginVertical="4dp"
    android:background="?attr/colorSecondary">

    <ImageView
        android:id="@+id/todoIconStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_green_bg"
        android:padding="10dp"
        android:src="@drawable/ic_baseline_check_24"
        app:tint="@color/black_coral"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todoTextContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Title"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimarySurface"
        app:layout_constraintStart_toEndOf="@id/todoIconStatus"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/todoTextStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PENDING"
        android:textSize="12sp"
        android:textColor="?attr/colorOnPrimarySurface"
        app:layout_constraintStart_toStartOf="@id/todoTextContent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/todoTextDateAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="01/01/2001 00:00 AM"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="12dp"
        android:textAlignment="textEnd"
        android:textSize="12sp"
        android:textColor="?attr/colorOnPrimarySurface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>